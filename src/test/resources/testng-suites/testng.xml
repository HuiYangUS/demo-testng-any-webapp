<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite parallel="methods" name="Cross Browser Suite">
	<!-- filter all tests in a suite -->
	<groups>
		<run>
			<include name="ui" />
		</run>
	</groups>

	<test thread-count="5" parallel="methods" name="Chrome Web Test">
		<!-- run a test under a parameter -->
		<parameter name="browser" value="chrome" />
		<packages>
			<package name="ui.base" />
			<package name="ui.lab" />
		</packages>
	</test>

	<test thread-count="5" parallel="methods" name="Firefox Web Test">
		<!-- run a test under a parameter -->
		<parameter name="browser" value="firefox" />
		<packages>
			<package name="ui.base" />
			<package name="ui.lab" />
		</packages>
	</test>
</suite> 
